{
    "compilerOptions": {
      "target": "es6",
      "resolveJsonModule": true,
      "lib": [
        "ES6",
        "dom"
      ],
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "inlineSourceMap": true,
      "moduleResolution": "node"
    },
    "include": [
      "scripts/**/*.ts",
      "src/**/*.ts",
      "node_modules/lodash-es/**/*.js"
    ]
  }
  